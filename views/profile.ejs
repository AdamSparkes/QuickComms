<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= profileUser.username %>'s Profile</title>
    <link rel="stylesheet" href="/styles.css" />
    <style>
      .profile-container {
        background-color: #fff;
        color: #333;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 40px auto;
      }

      .profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
      }

      .profile-avatar {
        width: 80px;
        height: 80px;
        background-color: #5d8efb;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 32px;
        font-weight: bold;
        margin-right: 20px;
        text-transform: uppercase;
      }

      .profile-details {
        flex: 1;
      }

      .profile-details h2 {
        margin: 0;
        font-size: 28px;
      }

      .profile-details p {
        margin: 5px 0;
        color: #777;
      }

      .profile-info {
        margin-top: 20px;
      }

      .profile-info h3 {
        margin-bottom: 10px;
        color: #5d8efb;
      }

      .profile-info p {
        margin: 8px 0;
        font-size: 16px;
      }

      .back-button {
        display: inline-block;
        margin-top: 30px;
        padding: 10px 20px;
        background-color: #5d8efb;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
      }

      .back-button:hover {
        background-color: #4a78e0;
      }

      @media (max-width: 600px) {
        .profile-container {
          padding: 20px;
          margin: 20px;
        }

        .profile-header {
          flex-direction: column;
          align-items: center;
          text-align: center;
        }

        .profile-avatar {
          margin-right: 0;
          margin-bottom: 15px;
        }

        .profile-details h2 {
          font-size: 24px;
        }

        .profile-details p {
          font-size: 14px;
        }

        .profile-info p {
          font-size: 14px;
        }
      }
    </style>
  </head>
  <body>
    <% include("partials/header", { user: profileUser }) %>
    <div class="profile-container">
      <div class="profile-header">
        <div class="profile-avatar"><%= profileUser.username.charAt(0) %></div>
        <div class="profile-details">
          <h2><%= profileUser.username %></h2>
          <p><%= profileUser.email || "Email not provided" %></p>
        </div>
      </div>
      <div class="profile-info">
        <h3>Account Details</h3>
        <p><strong>Username:</strong> <%= profileUser.username %></p>
        <p>
          <strong>Email:</strong> <%= profileUser.email || "Not provided" %>
        </p>
        <p>
          <strong>Role:</strong> <%= profileUser.role.charAt(0).toUpperCase() +
          profileUser.role.slice(1) %>
        </p>
        <p>
          <strong>Joined On:</strong> <%= new
          Date(profileUser.createdAt).toLocaleDateString() %>
        </p>
      </div>
      <a href="/dashboard" class="back-button">Back to Dashboard</a>
    </div>

    <div class="snowflakes" aria-hidden="true">
      <div class="snowflake">❅</div>
      <div class="snowflake">❆</div>
      <div class="snowflake">❄</div>
      <div class="snowflake">❄</div>
      <div class="snowflake">❅</div>
      <div class="snowflake">❆</div>
      <div class="snowflake">❄</div>
      <div class="snowflake">❅</div>
      <div class="snowflake">❆</div>
      <div class="snowflake">❄</div>
    </div>
  </body>
</html>
