<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Chat with <%= recipient %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <% include("partials/header", { user: { username: sender } }) %>
    <div class="main-content">
      <h1>Live Chat with <%= recipient %></h1>
      <div class="chat-widget">
        <div id="messages-container"></div> <!-- Chat messages will be loaded here -->
      </div>
      <form id="message-form">
        <input type="text" id="message-input" placeholder="Type a message..." required />
        <button type="submit">Send</button>
      </form>
    </div>

    <!-- Inject sender, recipient, and chat history for frontend.js -->
    <script>
      // Safely inject sender, recipient, and chat history
      window.senderUsername = "<%- sender %>";
      window.recipientUsername = "<%- recipient %>";
      window.existingMessages = <%- JSON.stringify(chatHistory || []) %>;
    </script>

    <!-- Include frontend.js -->
    <script src="/frontend.js" type="application/javascript"></script>

    <!-- Load existing chat messages -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const messagesContainer = document.getElementById("messages-container");

        if (messagesContainer && Array.isArray(window.existingMessages)) {
          window.existingMessages.forEach((msg) => {
            const el = document.createElement("div");
            const time = new Date(msg.timestamp);
            el.textContent = `[${time.toLocaleTimeString()}] ${msg.sender}: ${msg.message}`;
            messagesContainer.appendChild(el);
          });
        }
      });
    </script>
  </body>
</html>