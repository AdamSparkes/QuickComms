<!-- views/admin.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles.css" />
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th,
      td {
        padding: 12px;
        border: 1px solid #ddd;
        text-align: left;
      }
      th {
        background-color: #5d8efb;
        color: white;
      }
      .action-button {
        padding: 5px 10px;
        background-color: #ff4c4c;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }
      .action-button:hover {
        background-color: #e04343;
      }
    </style>
  </head>
  <body>
    <% include("partials/header", { user: currentUser }) %>
    <div class="main-content">
      <h1>Admin Dashboard</h1>
      <h2>Registered Users</h2>
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Joined On</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email || "N/A" %></td>
            <td><%= user.role %></td>
            <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
            <td>
              <% if (user.role !== 'admin') { %>
              <form
                action="/admin/delete/<%= user._id %>"
                method="post"
                style="display: inline"
              >
                <button
                  type="submit"
                  class="action-button"
                  onclick="return confirm('Are you sure you want to delete this user?');"
                >
                  Delete
                </button>
              </form>
              <% } else { %>
              <!-- No actions for admin users -->
              N/A <% } %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
